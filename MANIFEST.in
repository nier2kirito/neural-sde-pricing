# Include additional files in the package distribution

# Documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include SECURITY.md

# Configuration files
include requirements.txt
include pyproject.toml
include .pre-commit-config.yaml

# Data files
include Call_prices_59.pt
recursive-include images *.png *.pdf

# Documentation
recursive-include docs *.md

# Examples
recursive-include examples *.py

# Tests
recursive-include tests *.py

# GitHub templates
recursive-include .github *.md *.yml

# Exclude development and temporary files
exclude log_*.txt
exclude error_*.txt
exclude *.pth.tar
exclude *_option_prices_*.pt

# Exclude compiled files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
